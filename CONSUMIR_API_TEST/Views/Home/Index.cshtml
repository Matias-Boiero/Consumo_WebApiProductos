@model IEnumerable<COSUMIR_API_TEST.Models.Producto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Tus productos</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>


<div class="card">
    <div class="card-header">
        Lista de productos
    </div>
    <div class="card-body">

        <a asp-action="Producto" asp-controller="Home" asp-route-idProducto="0" class="btn btn-success btn-sm">Nuevo producto</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.Id)</th>
                    <th>@Html.DisplayNameFor(model=>model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model=>model.Descripcion)</th>
                    <th>@Html.DisplayNameFor(model=>model.Precio)</th>
                    <th>@Html.DisplayNameFor(model=>model.Activo)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio</td>
                        <td>@item.Activo</td>
                        <td>
                            <a asp-action="Producto" asp-controller="Home" asp-route-idProducto="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Home" asp-route-idProducto="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>